<h1>
    Create a new hope
</h1>

<%= form_for @hope do |f| %>
    <%= f.label "Select a user" %>
    <%= f.select :user_id, options_from_collection_for_select(User.all, "id", "name") %>
    <br>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>

    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>

    <%= f.label :category %>
    <%= f.text_field :category %>
    <br>

    <%= f.submit "Create" %>
<% end %><br>

<%= link_to "Cancel", hopes_path %>