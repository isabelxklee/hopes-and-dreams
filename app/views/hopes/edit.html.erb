<h1>Edit hope</h1>

<%= form_for @hope do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :description %>
    <%= f.text_field :description %><br>
    <%= f.label :category %>
    <%= f.text_field :category %><br>

    <%= f.submit "Save" %>
<% end %><br>

<%= link_to "Cancel", hope_path(@hope) %>