<div class="body">
  
  <h1>Login</h1>
    <% if flash[:error] %>
      <ul>
          <li class="error"><%= flash[:error] %></li>
      </ul>
    <% end %>

  <%= form_tag "/users/login", method: "POST", class: 'form' do %>
    <%= label_tag :email_address %>
    <%= text_field_tag :email_address %><br>

    <%= label_tag :password %>
    <%= password_field_tag :password %><br>

  <div class="btn-group">
    <%= button_tag "Login", class: "button" %>
  </div>
    
  <% end %>
</div>